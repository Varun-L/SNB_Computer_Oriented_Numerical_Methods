<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="fill_parent" android:layout_width="fill_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bisection Method"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/bisecthead"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter no.of Iterations"
        android:textSize="20sp"
        android:layout_below="@+id/bisecthead"
        android:id="@+id/it"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient of X^4"
        android:textSize="20sp"
        android:layout_below="@id/it"
        android:id="@+id/x4"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient of X^3"
        android:textSize="20sp"
        android:layout_below="@id/x4"
        android:id="@+id/x3"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient of X^2"
        android:textSize="20sp"
        android:layout_below="@id/x3"
        android:id="@+id/x2"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient of X"
        android:textSize="20sp"
        android:id="@+id/x"
        android:layout_below="@id/x2"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constant"
        android:textSize="20sp"
        android:id="@+id/cons"
        android:layout_below="@id/x"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="result"
        android:id="@+id/buttonresult"
        android:textSize="30sp"
        android:layout_below="@+id/cons"
        android:layout_marginTop="30dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_below="@+id/buttonresult"
        android:layout_marginTop="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Bisection Method:Enter All Values and Press Result. Enter The Numbers with respective Signs , after entering check the equation provided by us. If There are No Coefficients for some powers , enter them as zero (0). Suppose For Example if Your Equation is x^4-4x^3+2x-7=0 Enter 1 at Coefficient of x^4 and -4 at Coefficient of x^3 and 0 at x^2 and 2 at x and -7 at constant. Bisection Method cannot Calculate imaginary Roots , kindly enter the appropriate equation. "
        android:textSize="15sp"
        />

<EditText
    android:layout_below="@+id/bisecthead"
    android:layout_width="50dp"
    android:id="@+id/etforiterations"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/it"
    />
    <EditText
        android:layout_width="50dp"
        android:id="@+id/etx4"
        android:layout_below="@id/etforiterations"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/x4"
        />

    <EditText
        android:id="@+id/etx3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx4"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/x3" />

    <EditText
        android:id="@+id/etx2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etx3"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/x2" />

    <EditText
        android:id="@+id/etx1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etx2"
        android:layout_toRightOf="@+id/x" />

    <EditText
        android:layout_width="50dp"
        android:id="@+id/etcon"
        android:layout_below="@id/etx1"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cons"
        />
</RelativeLayout>
</ScrollView>