<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="fill_parent"
     android:layout_width="fill_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ABOUT THIS APP"
    android:gravity="center"
    android:layout_marginTop="30dp"
    android:textSize="30dp"
    android:textStyle="bold"
    android:id="@+id/samples123"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/samples123"
        android:id="@+id/sample321"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="This Appplication Exclusively Contains the Computer Oriented Numerical Methods. At present this app comprises of Gauss Jacobi Method and Gauss Seidel method and Bisection Method. Further Improvements will be made in future Updates. At Present Gauss Jacobi Method and Gauss Seidel method will only Work for the problems involving 3 variables and 3 Equations.We are looking to implement Method of False Position and enhance performance in next Update  "
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample321"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/devpanel"
        />

</RelativeLayout>
</ScrollView>